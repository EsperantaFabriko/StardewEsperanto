{
    "Format": "1.29.0",
    "Changes": [
        // define language
        {
            "Action": "EditData",
            "Target": "Data/AdditionalLanguages",
            "Entries": {
                "Jolesh.StardewValleyEsperanto": { // for technical reasons, you need to specify the ID here *and* in the "ID" field
                    "ID": "Jolesh.StardewValleyEsperanto",
                    "LanguageCode": "eo",
                    "ButtonTexture": "Mods/Jolesh.StardewValleyEsperanto/Button",
                    "UseLatinFont": true,
                    "TimeFormat": "[HOURS_24_00]:[MINUTES]",
                    "ClockTimeFormat": "[HOURS_24_00]:[MINUTES]",
                    "ClockDateFormat": "[DAY_OF_WEEK] [DAY_OF_MONTH]"
                }
            }
        },

        // load button texture
        {
            "Action": "Load",
            "Target": "Mods/Jolesh.StardewValleyEsperanto/Button",
            "FromFile": "assets/button.png"
        },

        //load Minigames folder

        {
            "Action": "Load",
            "Target": "Minigames/TitleButtons",
            "FromFile": "Minigames/TitleButtons.eo-EO.png",
            "When": {
              "Language": "eo"
          }
        },

        //load strings folder

        {
          "Action": "Load",
          "Target": "Strings/BundleNames",
          "FromFile": "Strings/BundleNames.eo-EO.json",
          "When": {
            "Language": "eo"
          }
        },
        {
          "Action": "Load",
          "Target": "Strings/Events",
          "FromFile": "Strings/Events.eo-EO.json",
          "When": {
            "Language": "eo"
          }
        },
        {
          "Action": "Load",
          "Target": "Strings/UI",
          "FromFile": "Strings/UI.eo-EO.json",
          "When": {
            "Language": "eo"
          }
        }
    ]
}
